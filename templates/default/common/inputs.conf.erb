[default]
host = <%= @ec2_support ? node['ec2']['instance_id'] : node['hostname'] %>-splunk

[monitor://$SPLUNK_HOME/var/log/splunk]

[monitor:///var/log]
ignoreOlderThan = 30d
disabled = 1
index = default
crcSalt = <SOURCE>

<% if node['splunk']['ssl_forwarding'] == true -%>
[splunktcp-ssl:9997]
compressed = true

[SSL]
password = <% if node['splunk']['inputsSSLPass'] != nil -%><%= node['splunk']['inputsSSLPass']%><% else -%><%= node['splunk']['ssl_forwarding_pass'] %><% end -%>
requireClientCert = false
rootCA = <%= @base_dir %>/etc/auth/forwarders/<%= node['splunk']['ssl_forwarding_cacert'] %>
serverCert = <%= @base_dir %>/etc/auth/forwarders/<%= node['splunk']['ssl_forwarding_servercert'] %>
<% end -%>
